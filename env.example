# App
NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_TIMEZONE=America/New_York

# Bot Identification (fallback if no bots are configured in MongoDB)
# After running `npx tsx scripts/seed-bots.ts`, bot configurations are stored in MongoDB
# These variables are used only as fallback values
NEXT_PUBLIC_BOT_TITLE=LolaBot
NEXT_PUBLIC_BOT_DESCRIPTION=LolaBot Intelligence
NEXT_PUBLIC_BOT_SHORTNAME=LolaBot
NEXT_PUBLIC_BOT_SLUG=lola-intelligence
NEXT_PUBLIC_INITIAL_GREETING="Hi, I'm your AI Assistant. How can I help you?"

# Legacy webhook (only used if no bot configs in MongoDB)
WEBHOOK_OUTGOING_URL=
WEBHOOK_SIGNATURE_SECRET=

# MongoDB
MONGODB_URI=
MONGODB_DB=lolabot

# Storage
STORAGE_PROVIDER=S3 # or R2
S3_BUCKET=
S3_REGION=
S3_ENDPOINT=
R2_PUBLIC_URL= # Optional: Public development URL for R2 (e.g., https://pub-xxx.r2.dev)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# SMTP (for OTP emails)
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM="LolaBot Intelligence Admin" <info@bizaigpt.com>

# CORS
EMBED_ALLOWED_ORIGINS=
