# LolaBot Landing Page - Environment Variables
# Copy this file to .env.local for local development
# In production (Docker), set these as environment variables

# ==============================================
# REQUIRED: Main LolaBot API URL
# ==============================================
# This is the URL of the main LolaBot application that serves the blog API
# The landing page fetches blog posts from /api/blog/* endpoints on this URL

# Local Development (when running main app on port 3000):
LOLABOT_API_URL=http://localhost:3000

# Production Docker Example (internal container network):
# LOLABOT_API_URL=http://lolabot-main:3000

# Production with Public URL:
# LOLABOT_API_URL=https://app.bizaigpt.com

# ==============================================
# DEPLOYMENT NOTES
# ==============================================
# 
# When deploying with Docker Compose:
# 
# services:
#   landing:
#     image: lolabot-landing
#     environment:
#       - LOLABOT_API_URL=http://main:3000
#     depends_on:
#       - main
#   
#   main:
#     image: lolabot-main
#     # ... main app config
#
# The landing container will fetch blog posts from the main container.
# Make sure both containers are on the same Docker network.
